{
    "name": "mrpropre/tinymce-spellchecker",
    "description": "PHP Backend for TinyMCE spellchecker plugin, with Enchant & PSpell engines support.",
    "type": "library",
    "license": "LGPL-3.0-only",
    "autoload": {
        "psr-4": {
            "TinyMCE\\Spellchecker\\": "src/"
        }
    },
    "require": {
        "php": ">=7.3"
    },
    "suggest": {
        "ext-enchant": "Enchant engine for spellchecking",
        "ext-pspell": "PSpell engine for spellchecking"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5"
    }
}
